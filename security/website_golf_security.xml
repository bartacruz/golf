<?xml version="1.0" encoding="utf-8"?>
<odoo noupdate="1">

    <record model="ir.rule" id="golf_tournament_public">
        <field name="name">Golf Tournament: public</field>
        <field name="model_id" ref="model_golf_tournament"/>
        <field name="domain_force">[('website_published', '=', True)]</field>
        <field name="groups" eval="[(4, ref('base.group_public')), (4, ref('base.group_portal'))]"/>
    </record>

    <record model="ir.rule" id="golf_card_public">
        <field name="name">Golf Card: public</field>
        <field name="model_id" ref="model_golf_card"/>
        <field name="domain_force">
            [(1, '=', 1)]
        </field>
        <field name="groups" eval="[(4, ref('base.group_public')), (4, ref('base.group_portal'))]"/>
    </record>
    <record model="ir.rule" id="golf_tournament_mode">
        <field name="name">Golf Tournament Mode: public</field>
        <field name="model_id" ref="model_golf_tournament_mode"/>
        <field name="domain_force">
            [(1, '=', 1)]
        </field>
        <field name="groups" eval="[(4, ref('base.group_public')), (4, ref('base.group_portal'))]"/>
    </record>

</odoo>
